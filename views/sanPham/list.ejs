<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='../stylesheets/style_header.css' />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="../stylesheets/sidebar.css">
</head>

<body>
  <div class="wrapper">
    <%- include('../inc/sidebar') %>
    <div class="main ">
      <%- include('../inc/header') %>
    <div class="content col-md-10 sm-10"style="overflow: auto; height: 80vh">
      <form id="searchForm" action="/sanPham/search" method="GET">
        <div class="row g-3">
            <div class="col">
                <input required="true" type="text" id="textQuery" name="query"
                    class="form-control" placeholder="Nhập tên dien thoai...">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Tìm</button>
            </div>
            <div class="col-auto">
                <button id="clear" class="btn btn-secondary">Làm mới</button>
            </div>
            <div class="col-auto">
                <a href="/sanPham" id="clear" class="btn btn-secondary">Tất cả</a>
            </div>
            <div class="col-auto">
              <button type="button" id="addProductButton" class="btn btn-success">Thêm</button>
            </div>
        </div>
    </form>
      
      <table class="table table-bordered table-hover mt-3">
        <thead>
          <tr class="align-middle text-center">
            <th scope="col" class="col-md-0.5 sm-0.5">STT</th>
            <th scope="col" class="col-md-1 sm-1">Ảnh</th>
            <th scope="col" class="col-md-4 sm-4">Tên </th>
            <th scope="col" class="col-md-1.5 sm-1.5">Số lượng</th>
            <th scope="col" class="col-md-3.5 sm-3.5">Hành động</th>
          </tr>
        </thead>
        <t class="table-group-divider">
          <% listSP.forEach((product, index)=> { %>
            <tr class="align-middle text-center">
              <th scope="row">
                <%= index + 1 %>
              </th>
              <td><img src="<%= product.hinhAnh %>" alt="Ảnh sản phẩm" width="70"></td>
              <td> <%= product.tenDienThoai %> </td>
              <td>
                <% let totalVariants = 0; %>
                <% product.mauSchema.forEach(variant => { %>
                  <% totalVariants += variant.soLuong; %>
                <% }); %>
                <%= totalVariants %>
              </td>
              <td>
                <a href="/sanPham/chi-tiet/<%= product._id %>" class="btn btn-primary icon-btn ms-2 me-2">Chi tiết</a>
                <a href="/sanPham/edit/<%= product._id %>" class="btn btn-info icon-btn me-2">Sửa</a>
                
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <%- include('../inc/footer') %> 
    </div>
    
  </div>

      <script>
        // Function to format currency
        function formatCurrency(amount) {
          return amount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") + "₫";
        }

        // Call formatCurrency function for each total amount in the table
        document.addEventListener("DOMContentLoaded", function () {
          const totalCells = document.querySelectorAll(".total-cell");
          totalCells.forEach(cell => {
            const amount = parseFloat(cell.textContent.trim());
            cell.textContent = formatCurrency(amount);
          });
        });
        document.getElementById('addProductButton').addEventListener('click', function() {
            window.location.href = '/sanPham/add';
        });
      </script>
      <!-- // Toggle status -->
      <script>
        document.querySelectorAll('.btn-toggle-status').forEach(button => {
          button.addEventListener('click', function(e) {
            const productId = this.getAttribute('data-id');
            const productStatus = this.getAttribute('data-status');
      
            fetch(`/api/sanPham/toggle-status/${productId}`, {
              method: 'PATCH',
              headers: { 'Content-Type': 'application/json' },
              // Không cần body nếu bạn chỉ toggle trạng thái
            })
            .then(response => response.json())
            .then(data => {
              console.log(data);
              // Cập nhật UI hoặc reload page để phản ánh thay đổi
              location.reload();
            })
            .catch(error => console.error('Error:', error));
          });
        });
      </script>
</body>

</html>