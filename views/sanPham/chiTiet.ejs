<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style_header.css' />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <style>
        .product-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin: 0;
            padding: 0;
        }

        .product-info img {
            max-width: 400px;
            height: auto;
            margin: 0;
            padding: 0;
        }

        .bold-text {
            font-weight: bold;
        }

        .slideshow-container {
            position: relative;
            max-width: 500px;
        }

        .mySlides {
            display: none;
        }

        .prev,
        .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            margin-top: -22px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }

        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

        .prev:hover,
        .next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <%- include('../inc/sidebar') %>
        <div class="main">
            <%- include('../inc/header') %>
            <div class="content col-md-10 sm-10 bg-light">
                <div class="col product-info">
                    <div class="slideshow-container">
                        <div class="mySlides">
                            <img src="<%= dienthoai.hinhAnh %>" style="width:100%">
                        </div>
                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                    </div>
                    <div class="col mt-3 ms-5">
                        <h4><%= dienthoai.tenDienThoai %></h4>
                        <p>Cấu hình:</p>
                        <% if (dienthoai.mauSchema && dienthoai.mauSchema.length) { %>
                        <% dienthoai.mauSchema.forEach((mau, index) => { %>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#<%= index %>">
                            <%= mau.mau %>
                        </button>

                        <!-- Modal biến thể-->
                        <div class="modal fade" id="<%= index %>" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Chi tiết biến thể</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col">
                                            <!-- Màu -->
                                            <label for="mau" class="form-label">Màu <span
                                                    class="text-danger">(*)</span></label>
                                            <input disabled type="text" class="form-control" id="mau" name="mau"
                                                value="<%= mau.mau %>">
                                        </div>
                                        <div class="col">
                                            <!-- Số lượng -->
                                            <label for="soLuong" class="form-label">Số lượng <span
                                                    class="text-danger">(*)</span></label>
                                            <input disabled type="number" class="form-control" id="soLuong"
                                                name="soLuong" min="1"
                                                value="<%= mau.soLuong %>">
                                        </div>
                                        <div class="col">
                                            <!-- Giá tiền -->
                                            <label for="giaTien" class="form-label">Giá tiền <span
                                                    class="text-danger">(*)</span></label>
                                            <input disabled type="number" class="form-control" id="giaTien"
                                                name="giaTien" min="0" step="any"
                                                value="<%= mau.giaTien %>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                        <% } %>
                    </div>
                </div>
                <p class="mt-3"><strong>Mô tả:</strong> <%= dienthoai.moTaThem %></p>
                <h3>Thông số kỹ thuật:</h3>
                <table class="table">
                    <tr>
                        <td><strong>Bộ xử lý</strong></td>
                        <td><strong>Màn hình</strong></td>
                    </tr>
                    <tr>
                        <td>
                            <ul>
                                <li><strong>CPU:</strong> <%= dienthoai.cPU %></li>
                                
                            </ul>
                        </td>
                        <td>
                            <ul>
                                <li><strong>Độ phân giải:</strong> <%= dienthoai.doPhanGiai %></li>
                                <li><strong>Công nghệ màn hình:</strong> <%= dienthoai.congNgheManHinh %></li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Bộ nhớ Ram - Ổ cứng</strong>
                            <ul>
                                <li><strong>Ram:</strong><%= dienthoai.ram %></li>

                            </ul>
                        </td>
                        <td><strong>Camera</strong>
                            <ul>
                                <li><strong>camera trước:</strong> <%= dienthoai.cameraTruoc %></li>
                                <li><strong>Camera sau:</strong> <%= dienthoai.camera %></li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <ul>
                                <li><strong>Sim:</strong><%= dienthoai.sim %></li>
                                <li><strong>Pin:</strong> <%= dienthoai.pin %></li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <li><strong>Số lượng CPU:</strong> <%= dienthoai.namSanXuat %></li>
                    </tr>
                    <!-- <tr>
                        <td><strong>Cổng kết nối và tính năng mở rộng</strong></td>
                        <td><strong>Kích thước và khối lượng</strong></td>
                    </tr> -->
                    <!-- Add other specifications here -->
                </table>
            </div>
            <%- include('../inc/footer') %>
        </div>
    </div>

    <script>
        var slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slides[slideIndex - 1].style.display = "block";
        }
    </script>
</body>

</html>
